<%- include('../_partials/header'); %>
    <style>
        .divider-text {
            position: relative;
            text-align: center;
            margin-top: 15px;
            margin-bottom: 15px;
        }

        .divider-text span {
            padding: 7px;
            font-size: 12px;
            position: relative;
            z-index: 2;
        }

        .divider-text:after {
            content: "";
            position: absolute;
            width: 100%;
            border-bottom: 1px solid #ddd;
            top: 55%;
            left: 0;
            z-index: 1;
        }

        .btn-facebook {
            background-color: #405D9D;
            color: #fff;
        }

        .btn-twitter {
            background-color: #42AEEC;
            color: #fff;
        }
    </style>
    <main role="main" class="container">

        <div class="card bg-light">
            <article class="card-body">
                <h4 class="card-title mt-3" style="font-weight: bold;">Create Account</h4>
                <p class="">Get started with your free account</p>

                
                <%if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" style="text-align:left">
                    <ul style="padding-left: 15px;">
                    <% errors.forEach(function(err){ %>
                    <li><%= err.msg %></li>
                    <% }) %>
                    </ul>
                </div>
                <% } %>

                <form class="mx-auto" style="max-width: 500px" method="POST" action="/auth/register/">
                    <p class="divider-text">
                        <span class="bg-light">Your Information</span>
                    </p>
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-user"></i>
                            </span>
                        </div>
                        <input name="name" class="form-control" placeholder="Full name" type="text" value="<%= (typeof body != 'undefined' && typeof body.name != 'undefined')?body.name:'' %>">
                    </div>
                    <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-envelope"></i>
                            </span>
                        </div>
                        <input name="email" class="form-control" placeholder="Email address" type="email" value="<%= (typeof body != 'undefined' && typeof body.email != 'undefined')?body.email:'' %>">
                    </div>
                    <!-- form-group// -->

                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <input name="password" class="form-control" placeholder="Create password" type="password">
                    </div>
                    <!-- form-group// -->
                    <div class="form-group input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <input name="password_confirm" class="form-control" placeholder="Repeat password" type="password">
                    </div>

                    <div class="form-group" style="padding-left: 0px;">   
                        <input
                        name="terms"
                        type="checkbox"
                        value="1"
                        id="termsAndConditionsCheck"
                        <%= (typeof body != 'undefined' && typeof body.terms != 'undefined')?'checked':'' %>
                        />
                        <label for="termsAndConditionsCheck">
                        Agree to <a href="#" style="color: blue;">terms and conditions</a>
                        </label>
                    </div>
                    




                    <!-- form-group// -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block"> Create Account </button>
                    </div>
                    <!-- form-group// -->
                    <p class="text-center">Have an account?
                        <a href="/auth/login/">Log In</a>
                    </p>
                </form>
            </article>
        </div>
        <!-- card.// -->

    </main>



    <%- include('../_partials/footer'); %>